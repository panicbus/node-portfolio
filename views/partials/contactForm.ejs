<form name="contactForm" data-ng-submit="cf.sendMail()">
	<div class="contact-form">
	  <div class="form-group">
	    <label for="name">Name</label>
	    <input type="text" class="form-control" id="name" data-ng-model="cf.contactName">
	  </div>
	  <div class="form-group">
	    <label for="email">Email address</label>
	    <input type="email" class="form-control" id="email" data-ng-model="cf.contactEmail">
	  </div>
	  <div class="form-group">
	    <label for="message">Message</label>
	    <textarea id="message" class="form-control" rows="3" data-ng-model="cf.contactMsg" required></textarea>
	  </div>
	  <label>
	  	<button type="submit" class="btn btn-default">Submit</button>
	  </label>
  </div>
</form>