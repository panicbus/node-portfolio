/*/// STYLUS MIXINS ////*/
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

border-radius()
	vendor('border-radius', arguments)

box-shadow()
	vendor('box-shadow', arguments)

transition()
	vendor('transition', arguments)

transform()
	vendor('transform', arguments)

accent-color = #e74c3c


body, html
	padding: 0
	margin: 0
	font: 18px "Lucida Grande", Helvetica, Arial, sans-serif

h1
	color: accent-color

a
	color: accent-color !important
	transition all .4s ease-in-out


/* NAVBAR */
.navbar
	min-height: 50px
	margin-bottom: 20px
	border: none
	transition: all .4s ease-in-out

.navbar-custom
	margin-bottom: 0
	padding: 20px 0
	text-transition: uppercase
	font-family: 'Raleway', sans-serif
	background: transparent

.navbar-nav
	li a
		transition: all .4s ease-in-out
		color: accent-color !important
		font-size: 19px
		&:hover
			background: none !important

.top-nav-collapse
	transition: all .4s ease-in-out
	padding: 0
	background: #000
	height: 50px
	border-bottom: 1px solid rgba(255, 255, 255, 0.3) !important

.navbar-brand
	margin-top: -35px

.nav-logo
	float: left
	padding-top: 7px
	color: #fff !important
	font-size: 25px
	display: none
	&:hover
		text-decoration: none

.page-scroll
	background: transparent !important
	&.active
		border-bottom: 3px solid accent-color
		margin-top: -3px


/* SPLASH SECTION */
.parallax-window
	min-height: 100vh

.header-title
	width: 100%
	background: rgba(0,0,0,0.1)
	border-top: 1px solid rgba(0,0,0,0.25)
	border-bottom: 1px solid rgba(0,0,0,0.25)
	padding: 10px 100px;
	.title
		font-family: 'Raleway'
		font-weight: 700
		font-size: 60px
		text-transform: uppercase
		span
			color: accent-color
	.name
		font-family: 'Playfair Display', sans-serif
		font-style: italic
		font-weight: 500
		font-size: 35px

.social
	display: inline-block;
	i
		font-size: 25px
	ul
		padding-left: 0
	li
		display: inline-block
		font-size: 22px
		padding: 0 10px
	a
		color: #333 !important
		transition all .4s ease-in-out
	.fa-linkedin
		padding-left: 0
		&:hover
			color: #007bb6
	.fa-github:hover
		background: #fff
		border-radius: 50px
	.fa-twitter:hover
		color: #00aced
	.fa-envelope:hover
		color: accent-color


/* INTRO SECTION */
.intro-bar
	font-family: 'Source Sans Pro', sans-serif
	text-transform: uppercase
	font-size: 22px
	padding: 30px 0
	background: accent-color
	.fa
		font-size: 38px

.hello
	width: 75%
	margin: 0 auto

.about-me
	background: #18191B
	color: #fff
	font-family: 'Source Sans Pro', sans-serif
	font-size: 19px
	padding: 20px 0
	.about-me-container
		width: 75%
		margin: 0 auto
	.avatar
		img
			border-radius: 100px
			border: 5px solid #888
			width: 200px

	.about-text
		padding: 20px 10px


/* SKILLS CAROUSEL */
.skills-carousel
	background: #000
	padding: 20px
	color: #fff
	.carousel-title
		text-transform: uppercase
		border-bottom: 1px solid accent-color
		font-size: 30px
		display: inline-block
		margin: 0 auto 25px
		padding: 10px 20px
	.skill
		font-size: 35px
		img
			max-width: 50px
			margin: 0 auto -50px
	.fa
		font-size: 40px

.owl-dot
	border-radius: 50px
	height: 5px
	width: 20px
	display: inline-block
	background: rgba(127,127,127, 0.5)
	margin-left: 5px
	margin-right: 5px

.owl-dot.active
	background: accent-color


/* JOB SECTION */
.parallax-window-2
	min-height: 300px

.job
	color: #fff

.job-title
	text-transform: uppercase
	border-bottom: 1px solid accent-color
	font-size: 25px
	display: inline-block
	margin: 0 auto 25px
	padding: 10px 20px



/* PORTFOLIO SECTION */
.portfolio-container
	height: 400px
	background: #000


/* CONTACT SECTION */
.contact-container
	height: 400px
	background: #000

.contact-form
	width: 75%
	margin: 0 auto
	color: #fff
	padding: 25px
	border: 1px solid rgba(255, 255, 255, 0.5)
	border-radius: 10px
	background: rgba(255, 255, 255, 0.2)
	input, textarea, button
		background: #000
		padding: 10px
		border-radius: 0 !important
		font-size: 18px
		color: #999
		border: 1px solid accent-color
		&:focus
			transition: all .4s ease-in-out
			border-color: accent-color
			// box-shadow: 0 0 8px accent-color
	button
		padding: 10px 25px
		color: #fff
		&:hover
			transition: all .4s ease-in-out
			background: accent-color !important
			border: 1px solid accent-color !important
			color: #fff !important


body
	background: #000 !important
	width:100%
	height:100%

.row
	margin: 0 !important

.center
	text-align: center

